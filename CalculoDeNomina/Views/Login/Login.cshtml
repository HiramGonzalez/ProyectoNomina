@{
    ViewBag.Title = "Index";
}

<h2>Login</h2>

<div class="text-center border-5">
    <p>Ingrese su usuario y contraseña para acceder a los cálculos de nómina.</p>

    <form class="form-check-inline" action="@Url.Action("LoginUsuario", "Login")" method="post">
        <div class="form-check gy-5">
            <div class="form-group text-start">
                <label class="control-label">Usuario</label>
                <input class="form-control" type="text" name="nombreUsuario" value="" />
            </div>

            <div class="form-group text-start">
                <label class="control-label">Contraseña</label>
                <input class="form-control" type="password" name="password" value="" />
            </div>
        </div>
       

        @if (ViewBag.MostrarMensajesError)
        {
            <div>
                <p class="text-danger">Usuario y/o contraseña incorrectos. Vuelva a intentarlo.</p>
            </div>
        }

        <button class="btn btn-success my-4" type="submit">Login</button>
    </form>

</div>
